<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/note_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/note_titlebg" >

        <TextView
            android:id="@+id/b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="   " />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/b"
            android:background="@drawable/note_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="数据分析"
            android:textColor="@android:color/white"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="   " />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <TextView
                    android:layout_width="@dimen/app_text_width_130"
                    android:layout_height="wrap_content"
                   android:theme="@style/app_text"
                    android:text="上月生产量: "/>
                <TextView
                    android:id="@+id/tv_PrevMonthProduction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/app_text"
                  />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <TextView
                    android:layout_width="@dimen/app_text_width_130"
                    android:layout_height="wrap_content"
                    android:theme="@style/app_text"
                    android:text="上月入库量: "/>
                <TextView
                    android:id="@+id/tv_PrevMonthStock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/app_text"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <TextView
                    android:layout_width="@dimen/app_text_width_130"
                    android:layout_height="wrap_content"
                    android:theme="@style/app_text"
                    android:text="上月人均工时: "/>
                <TextView
                    android:id="@+id/tv_PrevMonthPerHour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/app_text"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <TextView
                    android:layout_width="@dimen/app_text_width_130"
                    android:layout_height="wrap_content"
                    android:theme="@style/app_text"
                    android:text="本月生产量: "/>
                <TextView
                    android:id="@+id/tv_NextMonthProduction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/app_text"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <TextView
                    android:layout_width="@dimen/app_text_width_130"
                    android:layout_height="wrap_content"
                    android:theme="@style/app_text"
                    android:text="本月入库量: "/>
                <TextView
                    android:id="@+id/tv_NextMonthStock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/app_text"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <TextView
                    android:layout_width="@dimen/app_text_width_130"
                    android:layout_height="wrap_content"
                    android:theme="@style/app_text"
                    android:text="本月人均工时: "/>
                <TextView
                    android:id="@+id/tv_NextMonthPerHour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/app_text"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>