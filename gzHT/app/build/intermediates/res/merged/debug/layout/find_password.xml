<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gary_bg"
    android:paddingBottom="@dimen/activity_vertical_margin" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/note_titlebg" >
		
        <TextView
            android:id="@+id/c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="   " />
			
        <ImageView
            android:id="@+id/image_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/c"
            android:background="@drawable/note_back" />
	
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="找回密码"
            android:textColor="@android:color/white"
            android:textSize="25dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:paddingLeft="7dp"
        android:paddingRight="7dp" >

        <!-- 第一对 -->

        <EditText
            android:id="@+id/find_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="@drawable/qq_edit_login"
            android:paddingLeft="95sp"
            android:singleLine="true"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/find_name1"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/find_name"
            android:layout_alignLeft="@+id/find_name"
            android:layout_alignTop="@+id/find_name"
            android:gravity="center_vertical"
            android:paddingLeft="5sp"
            android:text="*客户名称:   "
            android:textColor="@android:color/black"
            android:textSize="18dp" />
        <!-- 第二对 -->

        <EditText
            android:id="@+id/find_contactname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/find_name"
            android:background="@drawable/qq_edit_login"
            android:paddingLeft="95sp"
            android:singleLine="true"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/find_contactname1"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/find_contactname"
            android:layout_alignLeft="@+id/find_contactname"
            android:layout_alignTop="@+id/find_contactname"
            android:gravity="center_vertical"
            android:paddingLeft="5sp"
            android:text="*联  系  人:   "
            android:textColor="@android:color/black"
            android:textSize="18dp" />
        <!-- 第三对 -->

        <EditText
            android:id="@+id/find_phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/find_contactname"
            android:background="@drawable/qq_edit_login"
            android:paddingLeft="95sp"
            android:singleLine="true"
            android:textSize="18dp" />
			
        <TextView
            android:id="@+id/find_phone1"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/find_phone"
            android:layout_alignLeft="@+id/find_phone"
            android:layout_alignTop="@+id/find_phone"
            android:gravity="center_vertical"
            android:paddingLeft="5sp"
            android:text="*手机号码:   "
            android:textColor="@android:color/black"
            android:textSize="18dp" />
        <!-- 第四对 -->

        <EditText
            android:id="@+id/find_swollen"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/find_phone"
            android:background="@drawable/qq_edit_login"
            android:paddingLeft="95sp"
            android:singleLine="true"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/find_swollen1"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/find_swollen"
            android:layout_alignLeft="@+id/find_swollen"
            android:layout_alignTop="@+id/find_swollen"
            android:gravity="center_vertical"
            android:paddingLeft="5sp"
            android:text="*帐        户:   "
            android:textColor="@android:color/black"
            android:textSize="18dp" />

   
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingLeft="7dp"
        android:paddingRight="7dp" >

        <Button
            android:id="@+id/b_enrolment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_bg"
            android:text="确认"
            android:textSize="20dp" />
                <TextView       
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "/>

        <Button
            android:id="@+id/b_back"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_bg"
            android:text="返回"
            android:textSize="20dp" />
    </LinearLayout>

</RelativeLayout>