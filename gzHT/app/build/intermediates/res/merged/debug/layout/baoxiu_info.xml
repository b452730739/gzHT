<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gary_bg"
    android:paddingBottom="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/e"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="   " />
		
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/e"
        android:background="@drawable/note_titlebg" >

        <TextView
            android:id="@+id/c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="   " />

        <ImageView
            android:id="@+id/image_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/c"
            android:background="@drawable/note_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="报修保养详细信息"
            android:textColor="@android:color/white"
            android:textSize="25dp" />
             <TextView
            android:id="@+id/b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="   " />

        <ImageView
            android:id="@+id/relpy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/b"
            android:background="@drawable/relpy" />
        
    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/aaaa"
        android:layout_below="@id/title"
        android:paddingLeft="7dp"
        android:paddingRight="7dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:focusable="true"
                android:focusableInTouchMode="true" >
            </LinearLayout>
            <!-- 第一对 -->

            <EditText
                android:id="@+id/et_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/qq_edit_login"
                android:cursorVisible="false"
                android:enabled="false"
                android:paddingLeft="95sp"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/et_name1"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/et_name"
                android:layout_alignLeft="@+id/et_name"
                android:layout_alignTop="@+id/et_name"
                android:gravity="center_vertical"
                android:paddingLeft="5sp"
                android:text="内容描述:   "
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <!-- 第三对 -->

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_name"
                android:background="@drawable/qq_edit_login"
                android:enabled="false"
                android:paddingLeft="95sp"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/et_phone1"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/et_phone"
                android:layout_alignLeft="@+id/et_phone"
                android:layout_alignTop="@+id/et_phone"
                android:gravity="center_vertical"
                android:paddingLeft="5sp"
                android:text="日        期:   "
                android:textColor="@android:color/black"
                android:textSize="18dp" />
            <!-- 第四对 -->

            <EditText
                android:id="@+id/et_swollen"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_phone"
                android:background="@drawable/qq_edit_login"
                android:enabled="false"
                android:paddingLeft="95sp"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/et_swollen1"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/et_swollen"
                android:layout_alignLeft="@+id/et_swollen"
                android:layout_alignTop="@+id/et_swollen"
                android:gravity="center_vertical"
                android:paddingLeft="5sp"
                android:text="机台编号:   "
                android:textColor="@android:color/black"
                android:textSize="18dp" />
            <!-- 第五对 -->

            <EditText
                android:id="@+id/et_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_swollen"
                android:background="@drawable/qq_edit_login"
                android:enabled="false"
                android:paddingLeft="95sp"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/et_password1"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/et_password"
                android:layout_alignLeft="@+id/et_password"
                android:layout_alignTop="@+id/et_password"
                android:gravity="center_vertical"
                android:paddingLeft="5sp"
                android:text="机台型号:   "
                android:textColor="@android:color/black"
                android:textSize="18dp" />
            <!-- 第六对 -->

            <EditText
                android:id="@+id/et_confirm_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_password"
                android:background="@drawable/qq_edit_login"
                android:enabled="false"
                android:paddingLeft="95sp"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/et_confirm_password1"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/et_confirm_password"
                android:layout_alignLeft="@+id/et_confirm_password"
                android:layout_alignTop="@+id/et_confirm_password"
                android:enabled="false"
                android:gravity="center_vertical"
                android:paddingLeft="5sp"
                android:text="出厂日期:   "
                android:textColor="@android:color/black"
                android:textSize="18dp" />
            
            
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>