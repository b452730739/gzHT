<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gary_bg"
    android:paddingBottom="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/e"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="   " />

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/e"
        android:background="@drawable/note_titlebg" >

        <TextView
            android:id="@+id/c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="   " />

        <ImageView
            android:id="@+id/image_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/c"
            android:background="@drawable/note_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="购买登记"
            android:textColor="@android:color/white"
            android:textSize="25dp" />
        
        <TextView
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="   " />

        <ImageView
            android:id="@+id/error_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/a"
            android:background="@drawable/error_find" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:paddingLeft="7dp"
        android:paddingRight="7dp" >

        <!-- 第一对 -->

        <EditText
            android:id="@+id/et_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="@drawable/qq_edit_login"
            android:paddingLeft="95sp"
            android:singleLine="true"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/et_name1"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/et_name"
            android:layout_alignLeft="@+id/et_name"
            android:layout_alignTop="@+id/et_name"
            android:background="@drawable/test_bg"
            android:gravity="center_vertical"
            android:paddingLeft="5sp"
            android:text="客户名称: *  "
            android:textColor="@android:color/white"
            android:textSize="18dp" />
        <!-- 第二对 -->

        <EditText
            android:id="@+id/et_contactname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_name"
            android:background="@drawable/qq_edit_login"
            android:paddingLeft="95sp"
            android:singleLine="true"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/et_contactname1"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/et_contactname"
            android:layout_alignLeft="@+id/et_contactname"
            android:layout_alignTop="@+id/et_contactname"
            android:background="@drawable/test_bg"
            android:gravity="center_vertical"
            android:paddingLeft="5sp"
            android:text="联  系  人: *  "
            android:textColor="@android:color/white"
            android:textSize="18dp" />
        <!-- 第三对 -->

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_contactname"
            android:background="@drawable/qq_edit_login"
            android:paddingLeft="95sp"
            android:singleLine="true"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/et_phone1"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/et_phone"
            android:layout_alignLeft="@+id/et_phone"
            android:layout_alignTop="@+id/et_phone"
            android:background="@drawable/test_bg"
            android:gravity="center_vertical"
            android:paddingLeft="5sp"
            android:text="手机号码: *  "
            android:textColor="@android:color/white"
            android:textSize="18dp" />
        <!-- 第四对 -->

        <EditText
            android:id="@+id/et_swollen"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_phone"
            android:background="@drawable/qq_edit_login"
            android:paddingLeft="95sp"
            android:singleLine="true"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/et_swollen1"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/et_swollen"
            android:layout_alignLeft="@+id/et_swollen"
            android:layout_alignTop="@+id/et_swollen"
            android:background="@drawable/test_bg"
            android:gravity="center_vertical"
            android:paddingLeft="5sp"
            android:text="账        户: *  "
            android:textColor="@android:color/white"
            android:textSize="18dp" />
        <!-- 第五对 -->

        <EditText
            android:id="@+id/et_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_swollen"
            android:background="@drawable/qq_edit_login"
            android:paddingLeft="95sp"
             android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/et_password1"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/et_password"
            android:layout_alignLeft="@+id/et_password"
            android:layout_alignTop="@+id/et_password"
            android:background="@drawable/test_bg"
            android:gravity="center_vertical"
            android:paddingLeft="5sp"
            android:text="密        码: *  "
            android:textColor="@android:color/white"
            android:textSize="18dp" />
        <!-- 第六对 -->

        <EditText
            android:id="@+id/et_confirm_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_password"
            android:background="@drawable/qq_edit_login"
            android:paddingLeft="95sp"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/et_confirm_password1"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/et_confirm_password"
            android:layout_alignLeft="@+id/et_confirm_password"
            android:layout_alignTop="@+id/et_confirm_password"
            android:background="@drawable/test_bg"
            android:gravity="center_vertical"
            android:paddingLeft="5sp"
            android:text="确认密码: *  "
            android:textColor="@android:color/white"
            android:textSize="18dp" />
        <!-- 第七对 -->

        <EditText
            android:id="@+id/postbox"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_confirm_password"
            android:background="@drawable/qq_edit_login"
            android:paddingLeft="95sp"
            android:singleLine="true"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/postbox1"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/postbox"
            android:layout_alignLeft="@+id/postbox"
            android:layout_alignTop="@+id/postbox"
            android:background="@drawable/test_bg"
            android:gravity="center_vertical"
            android:paddingLeft="5sp"
            android:text="邮        箱:     "
            android:textColor="@android:color/white"
            android:textSize="18dp" />
        <!-- 第八对 -->

        <EditText
            android:id="@+id/fax"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/postbox"
            android:background="@drawable/qq_edit_login"
            android:paddingLeft="95sp"
            android:singleLine="true"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/fax1"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/fax"
            android:layout_alignLeft="@+id/fax"
            android:layout_alignTop="@+id/fax"
            android:background="@drawable/test_bg"
            android:gravity="center_vertical"
            android:paddingLeft="5sp"
            android:text="传        真:     "
            android:textColor="@android:color/white"
            android:textSize="18dp" />
        <!-- 第九对 -->

        <EditText
            android:id="@+id/address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fax"
            android:background="@drawable/qq_edit_login"
            android:paddingLeft="95sp"
            android:singleLine="true"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/address1"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/address"
            android:layout_alignLeft="@+id/address"
            android:layout_alignTop="@+id/address"
            android:background="@drawable/test_bg"
            android:gravity="center_vertical"
            android:paddingLeft="5sp"
            android:text="客户地址: *  "
            android:textColor="@android:color/white"
            android:textSize="18dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/b_enrolment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="注册"
            android:textSize="20dp" />

        <Button
            android:id="@+id/b_back"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="返回"
            android:textSize="20dp" />
    </LinearLayout>

</RelativeLayout>