<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/zhuye_bg"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="9dp"
    android:paddingRight="9dp"
    android:paddingTop="5dp" >

    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/aa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/aa" />
		
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/mainpage_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/zhuye_vedio" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" " />

            <ImageView
                android:id="@+id/mainpage_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/zhuye_photo" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="2dp" />
			
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/mainpage_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/zhuye_location" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" " />

            <ImageView
                android:id="@+id/mainpage_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/zhuye_error" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/mainpage_fitting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/zhuye_fitting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" " />

            <ImageView
                android:id="@+id/mainpage_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/zhuye_note" />
        </LinearLayout>
        <LinearLayout 
           android:layout_width="fill_parent"
            android:layout_height="10dp"
            ></LinearLayout>

        <com.elegps.UIManager.LogOn_GetViewPage
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </com.elegps.UIManager.LogOn_GetViewPage>
    </LinearLayout>

