<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >



    <!-- 第2对 -->

    <TextView
        android:id="@+id/error_gongdan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
        
        android:background="@drawable/qq_edit_login"
        android:paddingLeft="90sp"
        android:textColor="@color/Black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/error_gongdan1"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/error_gongdan"
        android:layout_alignLeft="@+id/error_gongdan"
        android:layout_alignTop="@+id/error_gongdan"
        android:gravity="center_vertical"
        android:paddingLeft="5sp"
        android:text="配件描述:   "
        android:textColor="@android:color/black"
        android:textSize="18dp" />
    
   <!-- 第二对 -->

    <TextView
        android:id="@+id/tv1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/error_gongdan"
        android:background="@drawable/qq_edit_login"
        android:paddingLeft="90sp"
        android:textColor="@color/Black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv2"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv1"
        android:layout_alignLeft="@+id/tv1"
        android:layout_alignTop="@+id/tv1"
        android:gravity="center_vertical"
        android:paddingLeft="5sp"
        android:text="配件名称:   "
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <!-- 第3对 -->

    <TextView
        android:id="@+id/error_begin1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv2"
        android:background="@drawable/qq_edit_login"
        android:paddingLeft="90sp"
        android:textColor="@color/Black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/button3"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/error_begin1"
        android:layout_alignLeft="@+id/error_begin1"
        android:layout_alignTop="@+id/error_begin1"
        android:gravity="center_vertical"
        android:paddingLeft="5sp"
        android:text="机台编号:   "
        android:textColor="@android:color/black"
        android:textSize="18dp" />
    
        <!-- 第一对 -->

    <TextView
        android:id="@+id/error_num"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
                android:layout_below="@+id/error_begin1"
        
        android:background="@drawable/qq_edit_login"
        android:paddingLeft="90sp"
        android:textColor="@color/Black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/error_numfind"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/error_num"
        android:layout_alignLeft="@+id/error_num"
        android:layout_alignTop="@+id/error_num"
        android:gravity="center_vertical"
        android:paddingLeft="5sp"
        android:text="日        期:   "
        android:textColor="@android:color/black"
        android:textSize="18dp" />
    <LinearLayout  android:layout_width="fill_parent"
        android:layout_height="wrap_content"
             android:layout_below="@+id/error_num"
        android:layout_centerHorizontal="true">
            <Button
        android:id="@+id/delete"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/error_num"
        android:layout_centerHorizontal="true"
        android:background="@drawable/anniubj"
                    android:layout_weight="1"
        
        android:text="删              除"
        android:textSize="20dp" />
    <Button
        android:id="@+id/imageView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
   
        android:background="@drawable/anniubj"
                    android:layout_weight="1"
        
        android:text="回 复 记 录"
        android:textSize="20dp" />
    </LinearLayout>
